@model CrudUniversity703.Models.Compra

<div class="container mt-4">
    <h2>Eliminar Compra</h2>
    <h4>¿Está seguro que desea eliminar esta compra?</h4>

    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
