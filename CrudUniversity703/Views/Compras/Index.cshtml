@model IEnumerable<CrudUniversity703.Models.Compra>

<div class="container mt-4">
    <h2>Lista de Compras</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Nueva Compra</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Total</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
