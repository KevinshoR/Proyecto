@model CrudUniversity703.Models.Compra
@{
    ViewBag.Title = "Editar Compra";
    var productos = ViewBag.Productos as List<CrudUniversity703.Models.Producto>;
}

<div class="container mt-4">
    <h2>Editar Compra</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Producto</label>
            <select asp-for="ProductoId" class="form-select" required>
                @foreach (var p in productos)
                {
                    <option value="@p.Id" selected="@(p.Id == Model.ProductoId)">
                        @p.Nombre - $@p.Precio
                    </option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Cantidad" class="form-label"></label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>
